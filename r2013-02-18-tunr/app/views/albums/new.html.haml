.row
  .five.columns
    - if @album.errors.any?
      %ol
        - @album.errors.full_messages.each do |msg|
          %li
            %span.label.alert.radius= msg

    = form_for @album do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.submit nil, :class => 'button radius'
  .seven.columns
