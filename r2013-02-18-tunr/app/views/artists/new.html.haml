.row
  .five.columns
    = render(:partial => 'shared/errors', :locals => {:object => @artist})
    = form_for @artist do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :image
      = f.text_field :image
      = f.submit nil, :class => 'button radius'
  .seven.columns
