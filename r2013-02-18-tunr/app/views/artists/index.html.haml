%p.newlink= link_to('New Artist', new_artist_path, :class => 'button radius') if @auth.present? && @auth.is_admin
%table
  - @artists.each do |artist|
    %tr
      %td= artist.name
      %td= image_tag(artist.image)
      %td= link_to('Edit', edit_artist_path(artist), :class => 'button radius tiny') if @auth.present? && @auth.is_admin
