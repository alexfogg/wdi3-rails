.row
  .five.columns
    = render(:partial => 'shared/errors', :locals => {:object => @song})
    = form_for @song do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :filename
      = f.text_field :filename
      = f.label :image
      = f.text_field :image
      = f.label :cost
      = f.text_field :cost
      %h6 Genre:
      - Genre.all.each do |genre|
        = check_box_tag('song[genre_ids][]', genre.id, genre.in?(@song.genres.to_a))
        = genre.name
      %br
      = f.submit nil, :class => 'button radius'

  .seven.columns
