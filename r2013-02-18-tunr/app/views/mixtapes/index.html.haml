%table
  - @mixtapes.each do |mixtape|
    %tr{:class => cycle('row0', 'row1')}
      %td= link_to(mixtape.name, mixtape)
      %td= mixtape.name
      %td= link_to('Edit', edit_mixtape_path(mixtape), :class => 'button radius tiny') if is_admin