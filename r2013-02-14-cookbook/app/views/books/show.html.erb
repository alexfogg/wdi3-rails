<section id='info'>
  <%= link_to 'delete', @book, :method => :delete, :confirm => 'Do you really want to delete this?' %>
<%= link_to 'edit', edit_book_path(@book) %>
<br>
<%= image_tag(@book.image) %>
<li><%= link_to(@book.title, @book) %></li>
<li><%= @book.cuisine %></li>
<li><%= @book.chef %></li>

<br>
<div id='recipe'>

<% @book.recipes.each do |recipe| %>
<p>
  <%= recipe.name %>
  <br>
  <%= image_tag(recipe.image) %>
</p>
</div>

  <br>
  <br>

  <% recipe.ingredients.each do |ingredient| %>
  <p>
     <span id='ingredient'>
    <%= ingredient.name %>
    <br>
    <%= image_tag(ingredient.image) %>
    <br>
    <br>
    <br>
  </span>
</p>
  <% end %>
<% end %>
</section>