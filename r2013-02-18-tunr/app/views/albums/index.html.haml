%p.newlink= link_to('New Album', new_album_path, :class => 'button radius') if @auth.present? && @auth.is_admin
%table
  - @albums.each do |album|
    %tr
      %td= album.name
      %td= image_tag(album.image)
      %td= link_to('Edit', edit_album_path(album), :class => 'button radius tiny') if @auth.present? && @auth.is_admin
