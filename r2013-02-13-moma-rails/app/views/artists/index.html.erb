
<h1> Artists </h1>
<br>
<br>
<% @artists.each do |artist| %>


  <section>
    <%= image_tag(artist.image) %>
    <br>
    <div id='info'>
    Artist: <%= link_to artist.name, artist %>
    <br>
    Nationality: <%= artist.nationality %>
    <br>
    DOB: <%= artist.dob.strftime('%B %d, %Y') %>
    <br>
    Period: <%= artist.period %>
    </div>
    <br>
    <br>
    <br>
  </section>
  <% end %>
